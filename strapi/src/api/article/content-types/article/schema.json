{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "keep_image_in_assets": {
      "type": "boolean",
      "default": false
    },
    "quote": {
      "type": "text",
      "required": true
    },
    "rich_body": {
      "type": "blocks"
    },
    "author": {
      "type": "string"
    },
    "author_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "secondary_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "date": {
      "type": "datetime"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "homepage_status": {
      "type": "enumeration",
      "enum": [
        "active",
        "archived"
      ],
      "default": "active",
      "required": true
    },
    "link": {
      "type": "string"
    },
    "image_path": {
      "type": "string"
    },
    "newsletter_inclusion": {
      "type": "enumeration",
      "enum": [
        "none",
        "daily",
        "weekly",
        "both"
      ],
      "default": "none"
    },
    "enable_share_buttons": {
      "type": "boolean",
      "default": true
    }
  }
}
