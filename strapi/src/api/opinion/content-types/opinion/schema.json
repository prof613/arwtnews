{
  "kind": "collectionType",
  "collectionName": "opinions",
  "info": {
    "singularName": "opinion",
    "pluralName": "opinions",
    "displayName": "Opinion",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "rich_body": {
      "type": "richtext",
      "required": true
    },
    "quote": {
      "type": "text"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "string",
      "default": "Editorial Team"
    },
    "author_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "secondary_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "opinions_using_this_as_secondary"
    },
    "keep_image_in_assets": {
      "type": "boolean",
      "default": false
    },
    "date": {
      "type": "datetime"
    },
    "image_path": {
      "type": "string"
    },
    "newsletter_inclusion": {
      "type": "enumeration",
      "enum": [
        "none",
        "daily",
        "weekly",
        "both"
      ]
    },
    "enable_share_buttons": {
      "type": "boolean",
      "default": true
    }
  }
}
